---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header>
  <div class="header-container">
    <h2>
      {SITE_TITLE}
    </h2>
    <nav>
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>

      <HeaderLink
        href="https://www.linkedin.com/in/tom-corey-499419170/"
        target="_blank">Linkedin</HeaderLink
      >
      <HeaderLink href="https://github.com/tomcorey26" target="_blank"
        >GitHub</HeaderLink
      >
    </nav>
  </div>
</header>
<style>
  header {
    margin: 0 0 1.5rem;
    padding: 2rem 0;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .header-container::after {
    content: '';
    position: absolute;
    bottom: -2rem;
    left: 2rem;
    right: 2rem;
    height: 1px;
    background: var(--accent);
    opacity: 0.3;
  }

  h2 {
    margin: 0 0 1rem 0;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    color: var(--accent-light);
    letter-spacing: -0.5px;
  }

  nav {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 0 1rem;
    }

    .header-container::after {
      left: 1rem;
      right: 1rem;
    }
  }
</style>
